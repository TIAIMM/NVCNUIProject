			<onlyifnot src="io()" trait="_SWHC+MAPMO" />
		</add>
		<add>
			<copy src="sibling(Icon)" trait="width" />
			<mul> 2.45 </mul>
			<add>
				<copy> 16 </copy>
				<onlyif>
					<copy src="io()" trait="_SWHC+UIMod" />
